<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_tab_buttom_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">12sp</item>
        <!--<item name="android:textColor">@color/main_textcolor_selector</item>
        <item name="android:layout_marginTop">@dimen/tab_bottom_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/dp6</item>-->
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item> <!--浅蓝色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!--深蓝色-->
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

    <style name="MenuPopTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/red</item>
        <item name="actionOverflowMenuStyle">@style/MenuPopLocationTheme</item>
    </style>

    <style name="MenuPopLocationTheme" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>
</resources>
